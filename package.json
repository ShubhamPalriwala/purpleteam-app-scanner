    "convict-format-with-validator": "^6.0.1",
    "hapi-good-winston": "^3.0.1",
    "http-proxy-agent": "^4.0.1",
    "joi": "^17.4.0",
    "purpleteam-logger": "^1.1.2",
    "redis": "^3.1.2",
    "selenium-webdriver": "^4.0.0-beta.3",
    "zaproxy": "git+https://github.com/binarymist/zap-api-nodejs.git#68fc8c8a169f39ab415acf3d38b6ac7051caef8a"
  },
  "//Install ajv --save-dev": "gets rid of npm warning.",
  "devDependencies": {
    "ava": "^3.15.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-ava": "^12.0.0",
    "eslint-plugin-import": "^2.23.3",
    "npm-check": "^5.9.2",
    "nyc": "^15.1.0",
    "rewire": "^5.0.0",
    "sinon": "^11.1.1",
    "husky": "^6.0.0"
  },
